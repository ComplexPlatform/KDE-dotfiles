[bar/base]
font-0=sfmono powerline:size=11:antialias=true;3
font-1=FontAwesome5Free:style=Regular:size=9:antialias=true;3
font-2=FontAwesome5Free:style=Solid:size=9:antialias=true;3
font-3=IPAGothic:style=Regular:size=11:antialias=true;3
font-4=FontAwesome5Pro:style=Solid:size=9:antialias=true;3

radius = 15
height = 35

background = ${colors.background}
offset-y = 15

[bar/kde]
inherit = bar/base
width = 16.4%
;foreground = ${colors.foreground}
offset-x = 15
modules-left = kde-virtual-desktops 

;invert
;foreground = ${colors.background}
;background = ${colors.color1}

foreground = ${colors.color1}
background = ${colors.background}

[bar/mpd]
inherit = bar/base
width = 50%
offset-x = 17.7% 
modules-left = mpd
foreground = ${colors.foreground}
background = #00000000

[bar/stats]
inherit = bar/base
width = 21%
;padding-right = 0
offset-x = 72.6%
foreground = ${colors.foreground}
modules-right = openweathermap cpu memory pulseaudio-control 
background = #00000000

[bar/time]
inherit = bar/base
width = 5.3%
padding-right = 0
offset-x = 93.8%

;invert
;foreground = ${colors.background}
;background = ${colors.color1}

foreground = ${colors.color1}
background = ${colors.background}

modules-left = time 

